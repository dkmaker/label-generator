{
  "name": "@dkmaker/label-generator",
  "version": "0.0.1",
  "description": "NPM Package that generates SVG Labels for boxes based on JSON Input",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "label",
    "svg",
    "generator",
    "box",
    "label-generator"
  ],
  "author": "dkmaker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkmaker/label-generator.git"
  },
  "bugs": {
    "url": "https://github.com/dkmaker/label-generator/issues"
  },
  "homepage": "https://github.com/dkmaker/label-generator#readme",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
